<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkGray"
            android:text="Display"
            android:textColor="@color/offWhite"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="@color/black" />

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dip"
                    android:text="Kolor tekstu"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingTop="3dip"
                    android:singleLine="false"
                    android:text="Zmienić kolor preferowany tekstu"
                    android:textColor="@color/offWhite" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/setting_text_color_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="#ff000000"
                android:padding="3dp"
                android:src="@drawable/more" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:background="@color/darkGray" />

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dip"
                    android:text="Pokaż ukryte pliki/foldery"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingTop="3dip"
                    android:singleLine="false"
                    android:text="Wyświetlanie plików i folderów, które zaczynają się (okres)"
                    android:textColor="@color/offWhite" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/setting_hidden_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:padding="3dp" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:background="@color/darkGray" />

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dip"
                    android:text="Pokaż podgląd obrazu"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingTop="3dip"
                    android:singleLine="false"
                    android:text="Wyświetlanie miniatur dla plików obrazów"
                    android:textColor="@color/offWhite" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/setting_thumbnail_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:padding="3dp" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:background="@color/darkGray" />

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dip"
                    android:text="Pokaż przechowywania Banner"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingTop="3dip"
                    android:singleLine="false"
                    android:text="Wyświetl informacje o pamięci sdcard"
                    android:textColor="@color/offWhite" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/setting_storage_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:padding="3dp" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkGray"
            android:text="Sortowanie"
            android:textColor="@color/offWhite"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:background="@color/black" />

        <TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dip"
                    android:text="Typ sortowania"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingTop="3dip"
                    android:singleLine="false"
                    android:text="Wybierz sposób sortowania plików i folderów"
                    android:textColor="@color/offWhite" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/settings_sort_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="#ff000000"
                android:src="@drawable/more" />
        </TableRow>

    </TableLayout>
</ScrollView>